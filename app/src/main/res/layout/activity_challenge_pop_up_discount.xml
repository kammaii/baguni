<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".challenge.ChallengePopUpDiscount">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_white_20"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/bubbles_pink_1"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/bubbles_pink_2"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/title"
            android:text="@string/CHALLENGE_POPUP_DISCOUNT_TITLE"
            android:textSize="25dp"
            android:textColor="@color/NAVY"
            android:textStyle="bold"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/challenge"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <TextView
            android:id="@+id/contents"
            android:text="@string/CHALLENGE_POPUP_DISCOUNT_CONTENTS"
            android:textSize="20dp"
            android:textColor="@color/NAVY"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            app:layout_constraintTop_toBottomOf="@id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/valid"
            android:text="@string/VALID_1_HOUR"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/RED"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            app:layout_constraintTop_toBottomOf="@id/contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnGet"
            android:text="@string/GET_DISCOUNT"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/WHITE"
            android:background="@drawable/bg_red_15"
            app:layout_constraintTop_toBottomOf="@id/valid"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>