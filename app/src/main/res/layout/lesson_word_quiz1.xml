<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FOGGY"
    tools:context=".lesson.LessonWord">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/totalPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/answer"
                android:visibility="gone"
                android:gravity="center"
                android:textSize="50dp"
                android:textColor="@color/BLACK"
                android:fontFamily="@font/nanumgothic_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/btnAudio"
                android:src="@drawable/audio_big_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:background="@color/GREY"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintBottom_toTopOf="@id/engSwitch"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/btn1"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ripple_custom"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:id="@+id/btnText1"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/btn2"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ripple_custom"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:id="@+id/btnText2"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/btn3"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ripple_custom"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:id="@+id/btnText3"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/btn4"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:background="@drawable/ripple_custom"
                        android:padding="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />
                    <TextView
                        android:id="@+id/btnText4"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="ENG hint"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@id/engSwitch"
            app:layout_constraintBottom_toBottomOf="@id/engSwitch"
            app:layout_constraintEnd_toStartOf="@id/engSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/engSwitch"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb_selector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>