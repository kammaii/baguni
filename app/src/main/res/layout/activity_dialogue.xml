<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogueActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:visibility="visible"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_dialogue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:gravity="center"
            android:text="Title"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/PURPLE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvContents"
            android:layout_weight="1"
            android:text="contents"
            android:textSize="20dp"
            android:textColor="@color/NAVY"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnNo"
                android:text="@string/NO"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/WHITE"
                android:background="@drawable/bg_purple_25"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnYes"
                android:text="@string/YES"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/PURPLE"
                android:background="@drawable/bg_pink_25"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/unlockSecond"
        android:visibility="gone"
        android:paddingBottom="30dp"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_white_20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/close_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/popup_podo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/UNLOCK_FAILED"
            android:textSize="20dp"
            android:textColor="@color/BLACK"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/point_small" />

            <TextView
                android:id="@+id/pointHave"
                android:text="100"
                android:textSize="20dp"
                android:textColor="@color/PURPLE"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="60dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnPurchasePoints"
                android:text="@string/PURCHASE_POINTS"
                android:textAllCaps="false"
                android:textColor="@color/WHITE"
                android:background="@drawable/bg_purple_30"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnWatchAds"
                android:text="@string/GET_POINTS_BY_AD"
                android:textAllCaps="false"
                android:textColor="@color/PURPLE"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_white_30_stroke_purple"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>