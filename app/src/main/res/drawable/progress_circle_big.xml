<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadius="80dp"
            android:shape="ring"
            android:thickness="12dp"
            android:useLevel="true">

            <solid android:color="@color/BACK_GRADATION_PROGRESSBAR"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadius="80dp"
                android:shape="ring"
                android:thickness="12dp"
                android:useLevel="true">


                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />

                <gradient
                    android:angle="0"
                    android:type="sweep"
                    android:startColor="@color/BLUE_GRADATION_PROGRESSBAR"
                    android:centerColor="@color/PINK_GRADATION_PROGRESSBAR"
                    android:endColor="@color/PURPLE_GRADATION_PROGRESSBAR"/>
            </shape>
        </rotate>
    </item>
</layer-list>