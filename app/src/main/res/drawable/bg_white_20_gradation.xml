<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <size
                android:width="250dp"
                android:height="30dp"/>
            <gradient
                android:angle="45"
                android:startColor="#FF8495"
                android:endColor="#6A69EF"/>
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/WHITE" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>
